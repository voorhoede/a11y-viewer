{
  "name": "a11y-viewer",
  "version": "0.0.1",
  "description": "Emulate several forms of visual imparity for developing better accessible websites",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist/ && mkdirp dist/",
    "build": "npm-run-all build:html build:css build:js build:assets",
    "build:html": "ncp ./src/index.html ./dist/index.html",
    "build:css": "node scripts/build-css.js",
    "build:js": "node scripts/build-js.js",
    "build:assets": "ncp ./src/assets/ ./dist/assets/",
    "start": "http-server './dist/' -c-1 -o -p 1119",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "chokidar 'src/**/*.html' --command 'npm run build'",
    "watch:css": "chokidar 'src/*.css' --command 'npm run build'",
    "watch:js": "chokidar 'src/*.js' --command 'npm run build'",
    "watch:assets": "chokidar 'src/assets/**.*' --command 'npm run build:assets'"
  },
  "keywords": [
    "a11y",
    "accessibility"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voorhoede/a11y-viewer.git"
  },
  "author": {
    "name": "De Voorhoede",
    "email": "post@voorhoede.nl",
    "url": "voorhoede.nl"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/voorhoede/a11y-viewer/issues"
  },
  "homepage": "https://github.com/voorhoede/a11y-viewer#readme",
  "devDependencies": {
    "autoprefixer": "6.3.7",
    "chokidar-cli": "1.2.0",
    "cssnano": "3.7.3",
    "http-server": "0.9.0",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "npm-run-all": "2.3.0",
    "postcss": "5.1.0",
    "postcss-custom-properties": "5.0.1",
    "rimraf": "2.5.3",
    "uglify-js": "2.7.0"
  }
}
